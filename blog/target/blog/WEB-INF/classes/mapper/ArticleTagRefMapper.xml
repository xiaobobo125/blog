<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bolife.blog.mapper.ArticleTagRefMapper">
    <resultMap id="BaseResultMap" type="com.bolife.blog.entity.ArticleTagRef">
        <result column="article_id" jdbcType="INTEGER" property="articleId" />
        <result column="tag_id" jdbcType="INTEGER" property="tagId" />
    </resultMap>

    <sql id="tb">article_tag_ref</sql>


    <select id="listTagByArticleId" parameterType="java.lang.Integer" resultType="com.bolife.blog.entity.Tag">
        SELECT tag.* FROM tag, article_tag_ref
        WHERE article_tag_ref.article_id = #{value} AND
        article_tag_ref.tag_id = tag.tag_id
    </select>
</mapper>