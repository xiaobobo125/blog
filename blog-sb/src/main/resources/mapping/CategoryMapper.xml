<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bolife.blogspringboot.mapper.CategoryMapper">
    <resultMap id="BaseResultMap" type="com.bolife.blogspringboot.entity.Category">
        <id column="category_id" property="categoryId" jdbcType="INTEGER"/>
        <result column="category_pid" property="categoryPid" jdbcType="INTEGER"/>
        <result column="category_name" property="categoryName" jdbcType="VARCHAR"/>
        <result column="category_description" property="categoryDescription" jdbcType="VARCHAR"/>
        <result column="category_order" property="categoryOrder" jdbcType="INTEGER"/>
        <result column="category_icon" property="categoryIcon" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="findAllCategory" resultMap="BaseResultMap">
        SELECT * FROM category
    </select>

    <select id="findCountCategory" resultType="Integer">
        SELECT COUNT(*) FROM category
    </select>

    <select id="findCategoryById" resultMap="BaseResultMap">
        SELECT * FROM category WHERE category_id=#{id}
    </select>
    <select id="getCategoiesByArticleId" resultMap="BaseResultMap" parameterType="Integer">
        SELECT
        category.*
        FROM category, article_category_ref
        WHERE article_category_ref.article_id = #{aid} AND
        article_category_ref.category_id = category.category_id
        ORDER BY category.category_pid asc
    </select>
</mapper>